---
import memoji from "../../assets/memoji.png";
import astro from "../../assets/techs/astro.png";
import awscloud from "../../assets/techs/awscloud.png";
import docker from "../../assets/techs/docker.png";
import github from "../../assets/techs/github.png";
import grafana from "../../assets/techs/grafana.png";
import influxdb from "../../assets/techs/influxdb.png";
import java from "../../assets/techs/java.png";
import linux from "../../assets/techs/linux.png";
import python from "../../assets/techs/python.png";
import react from "../../assets/techs/react.png";
import springboot from "../../assets/techs/springboot.png";
import tailwind from "../../assets/techs/tailwind.png";
import vercel from "../../assets/techs/vercel.png";

const techs = [
  { src: react, label: "React", style: "top:8%; left:6%;", delay: 0 },
  { src: astro, label: "Astro", style: "top:10%; right:6%;", delay: 1 },
  { src: tailwind, label: "Tailwind", style: "top:35%; left:4%;", delay: 2 },
  { src: python, label: "Python", style: "top:38%; right:4%;", delay: 3 },
  { src: java, label: "Java", style: "top:18%; right:22%;", delay: 4 },
  { src: docker, label: "Docker", style: "top:82%; left:8%;", delay: 5 },
  { src: grafana, label: "Grafana", style: "top:52%; right:6%;", delay: 6 },
  { src: influxdb, label: "InfluxDB", style: "top:62%; left:5%;", delay: 7 },
  { src: springboot, label: "Spring", style: "top:70%; right:8%;", delay: 8 },
  { src: github, label: "GitHub", style: "top:90%; right:14%;", delay: 9 },
  { src: linux, label: "Linux", style: "top:48%; left:10%;", delay: 10 },
  { src: awscloud, label: "AWS", style: "top:26%; left:12%;", delay: 11 },
  { src: vercel, label: "Vercel", style: "top:88%; left:18%;", delay: 12 },
];
---

<section class="relative min-h-[calc(100vh-10rem)] flex items-center justify-center -translate-y-40 overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    {techs.map((tech) => (
      <div class="hero-pop" style={`${tech.style} animation-delay:${tech.delay}s;`}>
        <img src={tech.src.src} alt={tech.label} class="h-6 w-6 object-contain" />
        <span>{tech.label}</span>
      </div>
    ))}
  </div>

  <div class="relative z-10 mx-auto max-w-4xl text-center">
    <div class="mx-auto mb-8 h-28 w-28 overflow-hidden rounded-full border border-white/20 bg-white/5 shadow-[0_0_60px_rgba(96,165,250,0.35)]">
      <img
        src={memoji.src}
        alt="Memoji Jose Luis"
        class="h-full w-full object-cover object-[50%_55%] scale-125"
        loading="eager"
        decoding="async"
      />
    </div>
    <h1 class="text-5xl font-display leading-tight text-white md:text-7xl lg:text-8xl">
      <span data-lang="es">Hola, <p>soy Jose Luis Aguilar</p> y soy desarrollador Full-Stack.</span>
      <span data-lang="en">Hi, I'm Jose Luis Aguilar and I'm a Full-Stack developer.</span>
    </h1>
  </div>
</section>

<style>
  .hero-pop {
    position: absolute;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.35rem 0.8rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(10, 10, 15, 0.55);
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.65rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    backdrop-filter: blur(8px);
    opacity: 0;
    animation: heroPop 10s ease-in-out infinite;
  }

  @keyframes heroPop {
    0% { opacity: 0; transform: translateY(8px) scale(0.98); }
    15% { opacity: 0.9; transform: translateY(0) scale(1); }
    60% { opacity: 0.9; transform: translateY(-6px) scale(1); }
    85% { opacity: 0; transform: translateY(-12px) scale(0.98); }
    100% { opacity: 0; transform: translateY(-12px) scale(0.98); }
  }
</style>
