---
import memoji from "../../assets/memoji.png";
---

<section class="min-h-[calc(100vh-10rem)] flex items-center justify-center -translate-y-40">
  <div class="mx-auto max-w-4xl text-center">
    <div class="mx-auto mb-8 h-28 w-28 overflow-hidden rounded-full border border-white/20 bg-white/5 shadow-[0_0_60px_rgba(96,165,250,0.35)]">
      <img
        src={memoji.src}
        alt="Memoji Jose Luis"
        class="h-full w-full object-cover object-[50%_55%] scale-125"
        loading="eager"
        decoding="async"
      />
    </div>
    <h1 class="text-5xl font-display leading-tight text-white md:text-7xl lg:text-8xl">
      <span data-lang="es">Hola, Soy Jose Luis y soy desarrollador Full-Stack.</span>
      <span data-lang="en">Hi, I'm Jose Luis and I'm a Full-Stack developer.</span>
    </h1>
  </div>
</section>
